[module/datetime]
type = internal/date
interval = 1.0
date =  %H:%M
date-alt =  %e %B - %A
label = %date%
label-foreground = ${colors.magenta}

[module/battery]
type = internal/battery
battery = BAT0
poll-interval = 180
full-at = 95
label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%

format-discharging = %{A1:~/.notify/battery:}<ramp-capacity> <label-discharging>%{A}
format-full = %{A1:~/.notify/battery:}<ramp-capacity> <label-full>%{A}
format-charging = %{A1:~/.notify/battery:} <label-charging>%{A}
format-full-foreground = ${colors.cyan}
format-charging-foreground = ${colors.cyan}
format-discharging-foreground = ${colors.cyan}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/bluetooth]
type = custom/script
exec = "bluetoothctl paired-devices | cut -d' ' -f2 | xargs -i -n1 bash -c "bluetoothctl info {} | grep -q 'Connected: yes' && bluetoothctl info {} | grep -o 'Alias: .*'" | awk -vORS=', ' '{sub($1 OFS,"")}1' | sed -e 's/, $//'"
exec-if = "[ $(bluetoothctl show | grep 'Powered: yes' | wc -l) -gt 0 ]"
interval = 5
format-prefix = " "
format-foreground = ${colors.magenta}

[module/volume]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.green}
format-muted =  0%
format-muted-foreground = ${colors.red2}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/backlight]
